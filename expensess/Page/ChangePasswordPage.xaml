<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="expensess.Page.ChangePasswordPage"
             BackgroundColor="#0741ad"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20"  >
            <Label Text="Introduce tu nueva contraseña" TextColor="White" FontAttributes="Bold" FontSize="24"  />
            <Entry Placeholder="Nueva Contraseña" IsPassword="true" x:Name="newPasswordEntry" />
            <Button Text="Confirmar Cambio de Contraseña" TextColor="#0741ad" BackgroundColor="White" Clicked="ConfirmarCambioClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>