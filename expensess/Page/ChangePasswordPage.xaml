<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="expensess.Page.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Introduce tu nueva contraseña." />
            <Entry Placeholder="Nueva Contraseña" IsPassword="true" x:Name="newPasswordEntry" />
            <Button Text="Confirmar Cambio de Contraseña" Clicked="ConfirmarCambioClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>