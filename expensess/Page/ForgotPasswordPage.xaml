<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="expensess.Page.ForgotPasswordPage"
              BackgroundColor="#0741ad"
             >
    <ContentPage.Content>

        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
       
            <StackLayout VerticalOptions="CenterAndExpand" Padding="20" Margin="20,20"  BackgroundColor="White">
                <Label 
Text="Recupera tu Contraseña!" 
FontSize="24" 
FontAttributes="Bold" 
TextColor="#0741ad" 
HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></Label>
                <Entry Placeholder="Correo Electrónico" TextColor="#0741ad" x:Name="emailEntry" Keyboard="Email" />
                <Button Text="Enviar Solicitud" Clicked="EnviarSolicitudClicked"  BackgroundColor="#0741ad" TextColor="White" CornerRadius="6"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>