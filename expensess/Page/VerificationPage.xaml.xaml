<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="expensess.Page.VerificationPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Introduce el código de verificación que has recibido por correo electrónico." />
            <Entry Placeholder="Código de Verificación" x:Name="verificationCodeEntry" Keyboard="Numeric" />
            <Button Text="Validar Código" Clicked="ValidarCodigoClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>