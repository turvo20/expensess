        <StackLayout Padding="0,30,0,0" Margin="20,0,0,0">
            <Frame x:Name="frame" HasShadow="True"  CornerRadius="100" HorizontalOptions="Center" Padding="0">
                <Image x:Name="img" Aspect="AspectFill" />
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>